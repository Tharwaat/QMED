<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/croped_back"
    tools:context="com.example.root.qmed.SignUpActivity"
    tools:layout_editor_absoluteY="25dp">

    <EditText
        android:id="@+id/SignUpmail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="42dp"
        android:background="@drawable/edittextstyle"
        android:ems="10"
        android:hint="E-mail..."
        android:textColorHint="#000"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/ic_action_username"
        app:layout_constraintBottom_toTopOf="@+id/SignUpPass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignUpPhone"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/SignUpPass"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="42dp"
        android:background="@drawable/edittextstyle"
        android:drawableLeft="@drawable/ic_action_password"
        android:ems="10"
        android:hint="Password..."
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/cardView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignUpmail"
        android:textColorHint="#000"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/SignUpPhone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="42dp"
        android:background="@drawable/edittextstyle"
        android:drawableLeft="@drawable/ic_action_phone"
        android:ems="10"
        android:hint="Phone number..."
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/SignUpmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignUpAddress"
        android:textColorHint="#000"

        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/SignUpName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="198dp"
        android:background="@drawable/edittextstyle"
        android:drawableLeft="@drawable/ic_action_name"
        android:ems="10"
        android:hint="Username..."
        android:inputType="textPersonName"
        android:textSize="17dp"
        android:textColorHint="#000"
        app:layout_constraintBottom_toTopOf="@+id/SignUpAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/SignUpAddress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="42dp"
        android:background="@drawable/edittextstyle"
        android:textColorHint="#000"

        android:drawableLeft="@drawable/ic_action_address"
        android:ems="10"
        android:hint="Address..."
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/SignUpPhone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignUpName"
        tools:ignore="MissingConstraints" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="42dp"
        app:cardBackgroundColor="#7A7878"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignUpPass"
        tools:ignore="MissingConstraints">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Register"
                android:textColor="#000"

                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/backkk"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints" />


</android.support.constraint.ConstraintLayout>
