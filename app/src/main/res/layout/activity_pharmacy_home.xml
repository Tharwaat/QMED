<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrey"
    tools:context=".PharmacyHomeActivity"
    tools:layout_editor_absoluteY="25dp">

    <Button
        android:id="@+id/logout"
        android:layout_width="236dp"
        android:layout_height="0dp"
        android:layout_marginBottom="38dp"
        android:background="@drawable/rounded_bg_button"
        android:text="@string/logoutbtn"
        android:textIsSelectable="true"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showReqBtn" />

    <Button
        android:id="@+id/showReqBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="179dp"
        android:layout_marginEnd="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="262dp"
        android:onClick="showAllRequests"
        android:background="@drawable/rounded_bg_button"
        android:text="Show All Requests"
        android:textIsSelectable="true"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>